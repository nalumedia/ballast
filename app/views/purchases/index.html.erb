<h1>Orders</h1>

<div id="tabledata">
<table class="table tabel-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Order Total</th>
      <th>Product</th>
      <th>Customer</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.created_at.to_formatted_s(:short) %></td>
        <td><%= purchase.amount %></td>
        <td><%= purchase.description %>, <%= purchase.product_id %></td>
        <td>
          <%= purchase.email %><br />
          <%= purchase.customer_id %><br />
          <%= purchase.deliverto.deliverto_city %>
          </td>
        <td><%= link_to 'View', purchase %>
        | <%= link_to 'Edit', edit_purchase_path(purchase) %>
        | <%= link_to 'Delete', purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div> <!-- end table data -->
