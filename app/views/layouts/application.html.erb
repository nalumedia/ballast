<!DOCTYPE html>
<html>
<head>
  <title>Ballast Hardware // American Made Hardware For Surfing</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
   <meta name="description" content="We are hardware made for surfing. We are taking proven ideas from the past and blending them with materials and tools we have today to create a better experience for you in and out of the water.">
  <meta name="keywords" content="Ballast, Ballast Hardware, Surf Hardware, Surf Tools, Surf Goods, Surfing, waves, living, fun">

<link href='http://fonts.googleapis.com/css?family=Inconsolata' rel='stylesheet' type='text/css'>
<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>




<div class="container">

    <div class="row">
          <div class="col-md-12 text-center">
            <center>
            <%= link_to image_tag("https://s3.amazonaws.com/ballast/images/ballastlogo.png", class: "img-responsive"), root_path %>
          </center>
    
          </div><!-- end md 12 -->
    </div><!-- end row -->



<div class="row">
      <div class="col-md-12 text-center" id="headernav">
      <% if user_signed_in? %>  
      <%= link_to "ORDERS", delivertos_path %> |
      <%= link_to "HARWDARE", pages_paymentpage_path %> | <%= link_to "BLOG", blogs_path %> | <%= link_to "MEDIA", '#' %> | <%= link_to "FINS", fins_path %>

      <% else %>
      <!-- not logged in content -->
      <% end %>
      </div><!-- end md 12 -->
</div><!-- end row -->

<div class="row">
        <div class="col-md-12" id="main">
        <!-- end header -->



        <%= yield %>
        <!-- begin footer -->
        </div><!-- end md 12 -->    
</div><!-- end row -->


<div class="row">
    <div class="col-md-12 text-center" id="logobottom">
      <center>
    <img src="https://s3.amazonaws.com/ballast/images/ballast_a.png", class="img-responsive">
    </center>
    </div><!-- end md 4 -->
</div><!-- end row -->

<div class="row">
    <div class="col-md-4"></div><!-- end md 4 -->
    <div class="col-md-4 text-center" id="footernav">
       <% if user_signed_in? %>
            <%= link_to destroy_user_session_path, method: :delete do %>
            &nbsp; LOGOUT &nbsp;                            
            <% end %>
      <% else %>
      <%=  link_to new_user_session_path do %>
      &nbsp; LOGIN 
      <% end %> &nbsp; 
      <% end %>
      |
      <%= link_to "OUR STORY", about_path %>
      |
      <%= link_to "CONTACT", new_contact_path %>
 
      </div><!-- end md 4 -->
      <div class="col-md-4"></div><!-- end md 4 -->
</div><!-- end row -->

<div class="row">
      <div class="col-md-4"></div><!-- end md 4 -->
      <div class="col-md-4 text-center" id="footer">
      &copy; 2015 Ballast Hardware
      </div><!-- end md 4 -->
      <div class="col-md-4"></div><!-- end md 4 -->
</div><!-- end row -->

</div><!-- end container -->

<script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
  ga('create', 'UA-61197267-1', 'auto');
  ga('send', 'pageview');
</script>
</body>
</html>


