<h1>Orders (<%= Deliverto.count %>)</h1>


<div id="tabledata">
<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Status</th>
      <th>Ship To</th>
      <th>Item</th>
      <th>Instructions</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @delivertos.each do |deliverto| %>
      <tr>
        <td><%= deliverto.created_at.to_formatted_s(:short) %></td>
        <td>
          <% if deliverto.deliverto_status.blank? %>
          <div id="new">New</div>
          <% else %>
              <% if deliverto.deliverto_status = "Complete" %>
               <div id="complete">Complete</div>
               <% else %>
          <%= deliverto.deliverto_status %>
              <% end %>
          <% end %></td>
        <td><%= deliverto.purchase.email %><br />
          <%= deliverto.deliverto_street %><br />
        <%= deliverto.deliverto_city %>, <%= deliverto.delivertto_state %>, <%= deliverto.deliverto_zip %>, <%= deliverto.deliverto_country %></td>
        <td>
          <%= deliverto.purchase.description %>,
          <%= deliverto.purchase_id %></td>
        <td><%= deliverto.deliverto_instructions %></td>
        <td><%= link_to 'Show', deliverto %> |
        <%= link_to 'Edit', edit_deliverto_path(deliverto) %> |
        <%= link_to 'Destroy', deliverto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Deliverto', new_deliverto_path %> | <%= link_to "View Purchases", purchases_path %>
</div> <!-- end tabledata -->