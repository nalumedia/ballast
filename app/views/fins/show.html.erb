<div class="row">
  <div class="col-md-6 text-left">
    <%= link_to fins_path do %><i class="fa fa-angle-left"></i> &nbsp; Fins <% end %>
  </div><!-- end md 6 -->
  <div class="col-md-6"></div><!-- end md 6 -->
</div><!-- end row -->

<div class="row">
  <div class="col-md-12 text-left">
    <h2><%= @fin.name %> // <%= @fin.model %></h2>
  </div><!-- end md 12 -->
</div><!-- end row -->

<div class="row">
  <div class="col-md-12">
    <%= image_tag @fin.image.url(:medium), class: "img-responsive" %>
</div><!-- end md 12 -->
</div><!-- end row -->
 
<div class="row">
  <div class="col-md-12 text-left">
    <p>
  <i class="fa fa-terminal"></i> &nbsp;
  <%= @fin.height %> // <%= @fin.base %> 
</p>
  </div><!-- end md 12 -->
</div><!-- end row -->

<div class="row">
  <div class="col-md-12">
    <p>
    <%= @fin.description %>
    </p>
  </div><!-- end md 12 -->
</div><!-- end row -->

<div class="row">
  <div class="col-md-12 text-right">
    <p>
      <%= number_to_currency(@fin.customer_price) %>
    </p>
  </div><!-- end md 12 -->
</div><!-- end row -->

<div class="row">
  <div class="col-md-12 text-right">
      <%= form_tag charges_path, id: 'chargeForm' do %>
                    <script src="https://checkout.stripe.com/checkout.js"></script>
                    <%= hidden_field_tag 'stripeToken' %>
                    <%= hidden_field_tag 'stripeEmail' %>  
                    <%= hidden_field_tag 'amount', 6000  %> 
                    <button id="btn-buy" type="button" class="btn btn-success btn-lg"><i class="fa fa-credit-card"></i>&nbsp;PURCHASE</button>
                    <script>
                    var handler = StripeCheckout.configure({
                      key: '<%= Rails.configuration.stripe[:publishable_key] %>',
                      token: function(token, arg) {
                        document.getElementById("stripeToken").value = token.id;
                        document.getElementById("stripeEmail").value = token.email;
                        document.getElementById("chargeForm").submit();
                      }
                    });
                     document.getElementById('btn-buy').addEventListener('click', function(e) {
                      handler.open({
                        name: 'Item Name',
                        description: 'Item description ($60.00)',
                        amount: document.getElementById("amount").value
                    });
                    e.preventDefault();
                   })
                  </script>
                <% end %>

  </div><!-- end md 12 -->
</div><!-- end row -->





